    "dataViewMappings": [
        {
            "conditions": [
                {
                    "parentLabel": {
                        "max": 1
                    },
                    "angularAxis": {
                        "max": 1
                    },
                    "radialAxis": {
                        "max": 1
                    },
					"bubbleSize": {
                        "max": 1
                    },
                    "bubbleColor": {
                        "max": 1
                    },
					"bubbleLabel": {
                        "max": 1
                    }
                }
            ],
            "categorical": {
                "categories": {
                    "select": [
                        { "for": {"in": "parentLabel"}},
                        { "for": { "in": "angularAxis" } },
                        { "for": { "in": "radialAxis" } },
                        { "for": { "in": "bubbleSize" } },
                        { "for": { "in": "bubbleColor" } },
                        { "for": { "in": "bubbleLabel" } },
                        { "for": { "in": "otherValues" } }

                ],
                    "dataReductionAlgorithm": {
                        "window": {
                            "count": 2000
                        }
                    }
                },
                "values": {
                    "group": {
                        "by": "series",
                        "select":[
                            
                            { "for": { "in": "parentLabel" } }
                        ],
                        "dataReductionAlgorithm": {
                            "window": {
                              "count": 2000
                            }
                        }
                    }
                }
            }
        }
    ]
